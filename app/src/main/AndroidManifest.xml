<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cy.xintiao.game">

    <application
        android:name=".XTApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.RankActivity"
            android:label="@string/title_activity_rank"
            android:parentActivityName=".ui.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cy.xintiao.game.ui.BaseActivity" />
        </activity>
        <activity
            android:name=".ui.activity.ClassifyActivity"
            android:label="@string/title_activity_classify"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.AppDetailActivity"
            android:label="@string/title_activity_app_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
